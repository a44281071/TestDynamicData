<Window x:Class="TestDynamicData.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TestDynamicData"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ShellView"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance Type=local:ShellViewModel}"
        mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <ToolBar DockPanel.Dock="Top">
      <Button Name="ChangeAnyProperty" Content="Change"/>
      <Button Name="Pre"
              Command="{Binding PageParameters.PreviousPageCommand}"
              Content="Previous" />
      <Button Name="Next"
              Command="{Binding PageParameters.NextPageCommand}"
              Content="Next" />
      <Button Name="Add" Content="Add" />
      <Button Name="Remove" Content="Remove" />
      <Button Name="Update" Content="Update" />
    </ToolBar>
    <GroupBox Grid.Row="1" Header="Items">
      <DataGrid Name="Items" />
    </GroupBox>
    <GroupBox Grid.Row="2" Header="AllItems">
      <DataGrid Name="AllItems" />
    </GroupBox>
  </Grid>
</Window>