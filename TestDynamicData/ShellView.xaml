<Window x:Class="TestDynamicData.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cm="http://www.caliburnproject.org"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TestDynamicData"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ShellView"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance Type=local:ShellViewModel}"
        FontSize="16"
        mc:Ignorable="d">
  <DockPanel>
    <ListBox ItemsSource="{Binding ScreenItems}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Button Margin="0,3"
                  cm:Message.Attach="ShowScreen($dataContext)"
                  Content="{Binding}" />
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ListBox>
  </DockPanel>
</Window>